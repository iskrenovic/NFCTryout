<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.example.budalajedna.nfctryout.presentation.ViewModelMain"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">

        <ImageButton
            android:id="@+id/btFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@{vm.facebook ? vm.btOn : vm.btOff}"
            android:onClick="@{()->vm.facebookClick()}"
            android:padding="25dp"
            android:src="@{vm.facebook ? vm.srcFacebookOn : vm.srcFacebookOff}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--android:background="@{vm.btInstagram}"-->
        <!--android:src="@{vm.srcInstagram}"-->
        <ImageButton
            android:id="@+id/btInstagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:padding="25dp"
            app:layout_constraintEnd_toStartOf="@+id/btPhone"
            app:layout_constraintStart_toEndOf="@+id/btFacebook"
            app:layout_constraintTop_toTopOf="parent" />

        <!--android:background="@{vm.btContact}"-->
        <!--android:onClick="@{()->vm.facebookClick()}"-->

        <ImageButton
            android:id="@+id/btPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="25dp"
            android:src="@drawable/ic_phone_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:text="Poruka koja ce se poslati"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>